<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewModels="clr-namespace:Avalonia.Diagnostics.ViewModels;assembly=DiagnosticsTools"
             xmlns:avaloniaedit="clr-namespace:AvaloniaEdit;assembly=AvaloniaEdit"
             x:Class="Avalonia.Diagnostics.Controls.SourcePreviewEditor"
             x:DataType="viewModels:SourcePreviewViewModel"
             x:CompileBindings="True">
  <UserControl.Styles>
    <StyleInclude Source="avares://AvaloniaEdit/Themes/Fluent/AvaloniaEdit.xaml" />
  </UserControl.Styles>

  <StackPanel Spacing="6">
    <Border Padding="6"
            Background="#FFFDECC8"
            BorderBrush="#FFE6B450"
            BorderThickness="1"
            CornerRadius="4"
            IsVisible="{Binding IsReadOnly}">
      <TextBlock Text="{Binding ReadOnlyBanner}"
                 Foreground="#FF5C2D11"
                 TextWrapping="Wrap"/>
    </Border>

    <Border Padding="6"
            Background="#FFFDEFF0"
            BorderBrush="#FFEAB5B6"
            BorderThickness="1"
            CornerRadius="4"
            IsVisible="{Binding HasError}">
      <TextBlock Text="{Binding ErrorMessage}"
                 Foreground="#FF7C0A12"
                 TextWrapping="Wrap"/>
    </Border>

    <avaloniaedit:TextEditor x:Name="SnippetTextEditor"
                             IsReadOnly="True"
                             ShowLineNumbers="True"
                             WordWrap="False"
                             HorizontalScrollBarVisibility="Auto"
                             VerticalScrollBarVisibility="Auto"
                             FontFamily="Consolas, Courier New, Menlo, monospace"
                             FontSize="12"
                             IsVisible="{Binding HasSnippet}" />
  </StackPanel>
</UserControl>
